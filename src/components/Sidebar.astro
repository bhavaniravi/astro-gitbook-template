---
import NavItem from './NavItem.astro';

interface Props {
  sections: {
    id: string;
    title?: string;
    items: any[];
  }[];
}

const { sections } = Astro.props;
---

<aside class="w-72 h-screen fixed left-0 top-0 pt-16 overflow-y-auto scrollbar-thin bg-white dark:bg-gray-900 border-r border-gray-200 dark:border-gray-800 flex flex-col">
  <nav class="flex-1 px-3 py-6 space-y-8">
    {sections.map(section => (
      <div class="space-y-2">
        {section.title && (
          <div class="px-2 py-1 text-xs font-bold text-gray-700 dark:text-gray-400 uppercase tracking-wider">
            {section.title}
          </div>
        )}
        <div class="space-y-1">
          {section.items.map(item => (
            <NavItem {...item} />
          ))}
        </div>
      </div>
    ))}
  </nav>

