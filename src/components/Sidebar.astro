</aside>

<script>
  function scrollActiveIntoView() {
    // Add a small delay to ensure layout is computed, especially with dynamic expansion
    setTimeout(() => {
      const activeLink = document.querySelector('[data-active-link="true"]');
      if (activeLink) {
        console.log('Scrolling active link into view:', activeLink);
        // Use 'auto' (instant) behavior for page loads/navigation to avoid smooth scroll jank or failure
        // 'center' tries to put the item in the middle of the scrollable area
        activeLink.scrollIntoView({ block: 'center', behavior: 'auto' });
      } else {
        console.log('No active link found to scroll');
      }
    }, 100);
  }

  // Run on initial load and after swaps
  scrollActiveIntoView();
  document.addEventListener('astro:after-swap', scrollActiveIntoView);
</script>
