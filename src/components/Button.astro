---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost' | 'danger';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  external?: boolean;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md', 
  class: className,
  external = false
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center gap-2 font-medium transition-colors rounded-lg';

const variants = {
  primary: 'bg-gray-900 hover:bg-gray-700 dark:bg-gray-100 dark:hover:bg-gray-300 text-white dark:text-gray-900',
  secondary: 'bg-blue-600 hover:bg-blue-700 text-white',
  outline: 'border border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800 text-gray-700 dark:text-gray-300',
  ghost: 'text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100',
  danger: 'bg-red-600 hover:bg-red-700 text-white',
};

const sizes = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-6 py-3',
  lg: 'px-8 py-4 text-lg',
};

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  class={`${baseStyles} ${variants[variant]} ${sizes[size]} ${className || ''}`}
  target={external ? '_blank' : undefined}
  rel={external ? 'noopener noreferrer' : undefined}
>
  <slot name="icon-left" />
  <slot />
  <slot name="icon-right" />
</Element>
