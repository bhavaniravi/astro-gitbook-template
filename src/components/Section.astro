---
interface Props {
  title?: string;
  bordered?: boolean;
  class?: string;
}

const { title, bordered = false, class: className } = Astro.props;
---

<section class:list={[
  "mb-12 last:mb-0",
  className
]}>
  {title && (
    <h2 class:list={[
      "text-2xl font-bold text-gray-900 dark:text-gray-200 mb-6",
      bordered && "border-b border-gray-100 dark:border-gray-800 pb-2"
    ]}>
      {title}
    </h2>
  )}
  <div class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed max-w-3xl">
    <slot />
  </div>
</section>
