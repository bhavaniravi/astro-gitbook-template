---
interface Props {
  label?: string;
  class?: string;
}

const { label, class: className } = Astro.props;
---

<div class={`flex items-center gap-2 text-gray-600 dark:text-gray-400 ${className || ''}`}>
  <slot name="icon" />
  <span>
    {label && <span class="font-medium text-gray-900 dark:text-gray-100">{label}:</span>}
    <slot />
  </span>
</div>
