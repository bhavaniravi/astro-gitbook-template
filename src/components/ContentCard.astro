---
import Badge from './Badge.astro';

interface Props {
  title: string;
  subtitle?: string;
  date?: string | Date;
  tags?: string[];
  href: string;
  variant?: 'default' | 'compact' | 'grid';
}

const { title, subtitle, date, tags, href, variant = 'default' } = Astro.props;

const formatDate = (d: string | Date) => {
  const dateObj = typeof d === 'string' ? new Date(d) : d;
  return dateObj.toLocaleDateString('en-US', {
    year: 'numeric',
    month: variant === 'compact' ? 'short' : 'long',
    day: 'numeric'
  });
};
---

{variant === 'default' && (
  <article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-0">
    <a href={href} class="group block">
      <h3 class="text-2xl font-semibold text-gray-900 dark:text-gray-200 mb-3 transition-colors leading-tight">
        {title}
      </h3>
      {subtitle && (
        <p class="text-gray-600 dark:text-gray-400 mb-3 leading-relaxed">
          {subtitle}
        </p>
      )}
      <div class="flex items-center gap-4">
        {date && (
          <time class="text-sm text-gray-500 dark:text-gray-500 font-medium">
            {formatDate(date)}
          </time>
        )}
        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {tags.map(tag => (
              <Badge variant="gray">{tag}</Badge>
            ))}
          </div>
        )}
      </div>
    </a>
  </article>
)}

{variant === 'compact' && (
  <article class="group">
    <a href={href} class="block">
      <h3 class="text-lg font-medium text-gray-900 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors leading-snug">
        {title}
      </h3>
      {subtitle && (
        <p class="text-sm text-gray-600 dark:text-gray-400 mt-1 leading-relaxed">
          {subtitle}
        </p>
      )}
      <div class="flex items-center gap-3 mt-1">
        {date && (
          <time class="text-xs text-gray-500 dark:text-gray-500 block">
            {formatDate(date)}
          </time>
        )}
        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-1">
            {tags.slice(0, 3).map(tag => (
              <Badge variant="gray" class="text-[10px] px-1">{tag}</Badge>
            ))}
          </div>
        )}
      </div>
    </a>
  </article>
)}

{variant === 'grid' && (
  <article class="group h-full border border-gray-200 dark:border-gray-700 rounded-xl p-6 hover:border-blue-400 dark:hover:border-blue-500 transition-all hover:shadow-lg bg-white dark:bg-gray-800/50">
    <a href={href} class="flex flex-col h-full">
      <div class="flex justify-between items-start mb-4">
        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors leading-tight">
          {title}
        </h3>
        <svg class="w-5 h-5 text-gray-300 group-hover:text-blue-500 transition-colors shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </div>
      
      {subtitle && (
        <p class="text-gray-600 dark:text-gray-400 mb-6 flex-grow leading-relaxed line-clamp-3">
          {subtitle}
        </p>
      )}
      {date && (
        <time class="text-xs font-semibold text-gray-400 group-hover:text-gray-500 dark:text-gray-500 dark:group-hover:text-gray-400 uppercase tracking-widest mb-6">
          {formatDate(date)}
        </time>
      )}

      <div class="space-y-4">
        {tags && tags.length > 0 && (
          <div class="flex flex-wrap gap-1.5">
            {tags.map(tag => (
              <Badge variant="gray" class="text-[10px] uppercase font-bold tracking-wider">{tag}</Badge>
            ))}
          </div>
        )}
        

      </div>
    </a>
  </article>
)}
